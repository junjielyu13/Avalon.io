generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongodb"]
  // binaryTargets   = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://root:password@avalon-db:27017/avalon?authSource=admin&directConnection=true"
}


model Room {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String   @default("Avalon Game")
  code          String   @default("123456")   @unique
  type          Int      @default(1)
  player_number Int      @default(1)
  start         Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}


model Player {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String   @default("Anonymous")
  code          String   @default("12345678")   @unique
  role          Int      @default(1)
  accio         String?    
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

